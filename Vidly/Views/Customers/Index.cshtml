@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <text>No customers yet.</text>
}
else
{
    <ul>
        @foreach (var customer in Model)
        {
            <li>@customer.Name</li>
        }
    </ul>
}